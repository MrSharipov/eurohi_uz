.app {
  display flex
  overflow hidden
  width 100%
  max-width 100%
  height 100vh
  background-color var(--bg-color)
  &-main {
    width 100%
    max-width 100%
    height 100vh
    overflow-y auto
    display flex
    flex-direction column
    position relative
  }
  &-container {
    width 80%
    max-width @width
    padding-right var(--grid-gap-x)
    padding-left var(--grid-gap-x)
    margin-right auto
    margin-left auto
    &.full {
      width 100% !important
    }
  }
  &-footer {
    display flex
    justify-content center
    align-items center
    padding 40px
    background-color #f1f1f1
  }
}