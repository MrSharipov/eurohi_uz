*, *::before, *::after {
  box-sizing border-box
}

@media (prefers-reduced-motion: no-preference) {
  :root {
    scroll-behavior: smooth
  }
}

body {
  margin 0
  font-family: $font_regular
  font-size 1rem
  font-weight 400
  line-height 1.5
  color var(--text-color)
  background-color var(--bg-color)
  -webkit-text-size-adjust 100%
  -webkit-tap-highlight-color var(--text-color)
}
ul{
  list-style none
  padding 0
  margin 0
}
a{
  text-decoration none
  color var(--link-color)
}

h1, h2, h3, h4, h5, h6, p{
  margin 0
  font-weight normal
  font-family $font_regular;
}

.app-card-title{
  width 100%
  display flex
  align-items center
  justify-content flex-start
  font-size 26px
  font-family: $font_semi_bold
  margin-bottom 12px
  color var(--primary)
  a{
    display inline-flex
    align-items center
    margin-left auto
    font-size 18px
    font-family: $font_light
  }
}
.page-enter-active,
.page-leave-active {
  transition: all 0.3s
}
.page-enter-from,
.page-leave-to {
  opacity: 0;
  filter: blur(7px)
}
.on-loading{
  display flex
  justify-content center
  align-items center
  width 100%
  height 100vh
}
