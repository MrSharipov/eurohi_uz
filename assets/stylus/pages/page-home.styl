@import "../inc/_vars.styl";

.app-page-home {
  .app-container {
    display flex
    flex-direction column
    gap 20px
    margin-bottom 20px
    .banner {
      display flex
      align-items center
      gap 5em
      margin-top 5px
      img {
        height 30em
        width 70%
        object-fit cover
        border-radius 3px
      }
      &-text {
        position relative
        h1 {
          font-size 100px
          font-family $font_extra_bold
        }
        .p-tag {
          font-size 20px
          position absolute
          top -10px
          right 0
        }
      }
    }
    .for-whom {
      display flex
      flex-direction column
      align-items center
      h2 {
        font-size 40px
        padding 30px
      }
      .app-card-center {
        display flex
        flex-direction column
        justify-content center
        align-items center
        border-radius 10px
        padding 10px
        background-color #F4F0F8
        img {
          width 90px
          height 90px
          object-fit cover
          padding 10px
        }
        p {
          text-align center
        }
      }
    }
  }

}